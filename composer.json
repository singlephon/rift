{
    "name": "singlephon/rift",
    "description": "Rift is a minimalist framework that extends Laravel Livewire, allowing you to create structured two-way communication between PHP and JavaScript for your components.",
    "keywords": [
        "singlephon",
        "rift"
    ],
    "homepage": "https://github.com/singlephon/rift",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Rakhat Bakytzhanov",
            "email": "singlephon@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Singlephon\\Rift\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Singlephon\\Rift\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Singlephon\\Rift\\RiftServiceProvider"
            ],
            "aliases": {
                "Rift": "Singlephon\\Rift\\RiftFacade"
            }
        }
    }
}
